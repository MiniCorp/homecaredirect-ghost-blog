<div class="cover-wrap">
	<div class="cover tag-cover align-center {{#if tag.image}}has-image" style="background-image: url({{tag.image}});"{{else}}no-image"{{/if}}>
		<div class="overlay">
				<h3 class="tag-title">Tag: {{tag.name}}</h3>
				<div class="meta-info">
					<span>Total {{plural pagination.total empty='0 Post' singular='% Post' plural='% Posts'}}</span>
				</div>
				{{#if tag.description}}
				<p class="description">{{tag.description}}</p>
				{{/if}}
		</div>
	</div>
</div>
