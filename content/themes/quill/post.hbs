{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<!-- start post -->
{{#post}}
<section class="content-area">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="post post-single">
					{{#if image}}
					<div class="featured-image single" style="background-image: url({{image}})">
					</div>
					{{/if}}
					<div class="small-container">
						{{#if tags}}
		                <div class="category">
		                	{{tags separator=" "}}
		                </div>
		                {{/if}}
						<h1 class="title">{{title}}</h2>
						<div class="post-meta">
							{{#author}}
				                <a class="author" href="{{url}}">
									{{#if profile_image}}
				                	<img src="{{profile_image}}" alt="{{name}}" class="avartar">
				                	{{/if}}
				                	<span class="name">{{name}}</span>
				                </a>
							{{/author}}
							- <time class="date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
						</div>
						<div class="post-content">
							{{content}}
						</div>
					</div>
				</div>
				<div class=" post small-container">
					{{> share-links}}
					{{> about-author}}
					{{> prev-next}}
					{{> comment}}
				</div>
			</div>
		</div>
	</div>
</section>
{{/post}}
<!-- end container -->
